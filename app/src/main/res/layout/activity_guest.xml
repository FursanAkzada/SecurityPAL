<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guest"
    android:orientation="vertical"
    android:background="@drawable/menu_employee">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/pens1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tekkom1"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/nameGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Name                    :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNameGuest"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/instansi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Instansi                :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtInstansi"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/noHPGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Phone                   :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNoHPGuest"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/divisiGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Target Division   :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNip"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/necessityGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Necessity             :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtNecessityGuest"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/dateGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Date                       :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtDateGuest"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/calGuest"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendar"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/timeinGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Time in                 :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtTimeinGuest"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_timein"
            android:onClick="pop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/timeout"
            android:layout_marginTop="5dp"
            tools:ignore="OnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/timeoutGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Time out              :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtTimeoutGuest"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/img_timeout"
            android:onClick="pop2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/timeback"
            android:layout_marginTop="5dp"
            tools:ignore="OnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/statusGuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Status                  :"
            android:textColor="#174887"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edtStatusGuest"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/sendGuest"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Send"
            android:background="@drawable/edittext_employ">
        </Button>
    </LinearLayout>

</LinearLayout>